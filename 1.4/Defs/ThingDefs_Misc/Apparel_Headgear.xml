      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>2</EquipDelay>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
	<costStuffCount>20</costStuffCount>
    <equippedStatOffsets>
      <ResearchSpeed>1</ResearchSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
